
button-mixin(){
    display: inline-block;
    box-shadow: 0 3px 6px rgba(0,0,0,0.16);
    border-radius: 5px;
}

.c-buttonPrimary {     //トップのボタン
    button-mixin()
    background: $clr-btn-primary;
    width: 196px;
    height: 60px;
}
.c-buttonInner {
    display: flex;
    align-items: center;
    height: 100%;
}
.c-buttonInner__PrimaryIcon {
    width: 22px;
    height: 22px;
    margin-left: 22px;
}
.c-buttonInner__PrimaryTxt {
    font-size: 12px;
    color: $clr-white;
    margin-left: 15px;
}

